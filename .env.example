# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=mlops

# -----------------------------------------------------------------------------
# MinIO (S3-compatible Object Storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=change_me_in_production

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_KEY=change_me_in_production
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# -----------------------------------------------------------------------------
# Airflow Configuration
# -----------------------------------------------------------------------------
AIRFLOW_FERNET_KEY=generate_with_python_-c_from_cryptography.fernet_import_Fernet_print_Fernet.generate_key
AIRFLOW_SECRET_KEY=change_me_in_production

# -----------------------------------------------------------------------------
# Training Configuration (Optional)
# -----------------------------------------------------------------------------
TRAINING_DATA_PATH=/opt/airflow/data/processed/train.csv
TRAINING_TEST_PATH=/opt/airflow/data/processed/test.csv
TRAINING_TARGET_COL=MedHouseVal
TRAINING_MODEL_TYPE=RandomForest
TRAINING_CV_FOLDS=5
TRAINING_TEST_SIZE=0.2

